---
import Layout from "../layouts/Layout.astro";
import Sidebar from "../components/sidebarTestSensor.astro";
import ModalSystemConfig from "../components/modals/system-config.astro";
import Bluetooth from "../components/bluetooth.astro";
import DrawerSensor from "../components/drawerSensor.astro";
---

<Layout title="Test Sensor">
  <div
    class="flex flex-col h-full w-full items-center justify-center overflow-y-hidden"
  >
    <Sidebar />
    <div class="w-full">
      <Bluetooth />
      <!-- <ModalPlants /> -->
      <!-- <ModalPictures /> -->
      <!-- <ModalSyncCollect /> -->
      <ModalSystemConfig />
      <DrawerSensor />
    </div>
  </div>
  <script is:inline>
    const token = localStorage.getItem("_token_") || "";
    if (!token) {
      window.location.href = "/";
    }
  </script>
</Layout>

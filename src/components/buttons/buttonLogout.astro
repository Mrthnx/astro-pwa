<div>
  <button
    class="w-full rounded-md rounded-red-700 hover:bg-red-800 hover:text-white text-md outline-red-700 text-red-900 px-2 py-1"
    id="logout"
    onclick="logout()"
  >
    <span class="px-2">Logout</span>
  </button>
</div>
<script is:inline>
  function logout() {
    localStorage.removeItem("_token_");
    window.location.href = "/";
  }
</script>
